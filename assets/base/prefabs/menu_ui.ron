#![enable(implicit_some)]
Container(
    transform: (
        id: "all",
        anchor: Middle,
        stretch: XY( x_margin: 0., y_margin: 0.),
        width: 20.,
        height: 20.,
    ),
    background: (
        image: Data(Rgba((0.988, 0.969, 1.0, 1.0), (channel: Srgb))),
    ),
    children: [
        // Title Left
        Text(
            transform: (
                id: "title_left",
                x: -416.,
                y: -90.,
                width: 800.,
                height: 150.,
                tab_order: -1,
                anchor: TopMiddle,
            ),
            text: (
                text: "Hoppin",
                font: File("base/font/arial.ttf", Ttf, ()),
                font_size: 100.,
                color: (0.149, 0.376, 0.643, 1.0),
                align: MiddleRight,
            )
        ),

        // Title Right
        Text(
            transform: (
                id: "title_right",
                x: 416.,
                y: -90.,
                width: 800.,
                height: 150.,
                tab_order: -1,
                anchor: TopMiddle,
            ),
            text: (
                text: "World",
                font: File("base/font/arial.ttf", Ttf, ()),
                font_size: 100.,
                color: (0.988, 0.537, 0.255, 1.0),
                align: MiddleLeft,
            )
        ),

        // Play Button
        Button(
            transform: (
                id: "play_button",
                y: 92.,
                width: 256.,
                height: 128.,
                tab_order: 1,
                anchor: Middle,
                mouse_reactive: true,
            ),
            button: (
                text: "Play!",
                font: File("base/font/arial.ttf", Ttf, ()),
                font_size: 60.,
                normal_text_color: (0.251, 0.247, 0.298, 1.0),
                normal_image: Data(Rgba((0.988, 0.537, 0.255, 1.0), (channel: Srgb))),
                hover_image: Data(Rgba((0.935, 0.456, 0.157, 1.0), (channel: Srgb))),
                press_image: Data(Rgba((0.825, 0.335, 0.028, 1.0), (channel: Srgb))),
                //hover_sound: File("audio/boop.ogg", Ogg, ()),
                //press_sound: File("audio/confirm.ogg", Ogg, ()),
            )
        ),

        // Quit Button
        Button(
            transform: (
                id: "quit_button",
                y: 92.,
                width: 256.,
                height: 128.,
                tab_order: 1,
                anchor: BottomMiddle,
                mouse_reactive: true,
            ),
            button: (
                text: "Quit",
                font: File("base/font/arial.ttf", Ttf, ()),
                font_size: 60.,
                normal_text_color: (0.251, 0.247, 0.298, 1.0),
                normal_image: Data(Rgba((0.914, 0.843, 0.345, 1.0), (channel: Srgb))),
                hover_image: Data(Rgba((0.795, 0.734, 0.304, 1.0), (channel: Srgb))),
                press_image: Data(Rgba((0.710, 0.646, 0.191, 1.0), (channel: Srgb))),
            )
        ),
    ]
)